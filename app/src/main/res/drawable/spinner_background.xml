<?xml version="1.0" encoding="utf-8"?>
<layer-list  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Spinner background color -->
            <corners android:radius="12dp" />  <!-- Rounded corners -->
            <stroke
                android:width="2dp"
                android:color="#FF1744" />  <!-- Border color -->
        </shape>
    </item>

    <!-- Shadow layer -->
    <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- Shadow color -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>