<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/soft_gradient_bg">

    <TextView
        android:id="@+id/tvRateUsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Us"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:layout_below="@id/tvRateUsHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/etReview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Write your review here"
        android:gravity="top|start"
        android:background="@drawable/soft_gradient_background"
        android:layout_below="@id/ratingBar"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:maxLines="5"
        android:inputType="textMultiLine"/>

    <Button
        android:id="@+id/btnSubmitReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Review"
        android:layout_below="@id/etReview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/flat_rounded_button"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvCustomerReviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSubmitReview"
        android:layout_marginTop="20dp"
        android:text="Reviews from our Valuable Customers:"
        android:textSize="16sp" />

</RelativeLayout>
